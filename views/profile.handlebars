<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Project:</h3>

        <form style="margin-left: 2%; margin-right: 2%;" class="form new-project-form">
            <div class="form-group">
                <label for="project-name">Blog name:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" />
            </div>
            <div class="form-group">
                <label for="project-desc">blog text:</label>
                <textarea class="form-input" id="blog-text" name="blog-text"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
    {{#if blogs.length}}
    <h2 style="text-align: center; margin-top:4%;margin-bottom:4%;">
        Current blogs
    </h2>

    {{#each blogs as |blog|}}
    <div id="blogBG">
        <h4 style="text-align: center; margin-top:4%;"><u><a style=" color:white;"
                    href="/blogs/{{blog.id}}">{{blog.name}}</a></u>
        </h4>
        <div class="center">
            <button style="margin: auto" class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
        </div>
    </div>
